<% if album_music.favorited_by?(current_listener) %>
  <%= link_to artist_album_album_music_music_favorite_path(album, album_music,favorite), method: :delete, class: "text-warning",remote: true do %><i class="fas fa-star fa-lg"><%= album_music.music_favorites.count %></i><% end %>
<% else %>
  <%= link_to artist_album_album_music_music_favorites_path(album, album_music), method: :post, remote: true do %><i class="far fa-star fa-lg"><%= album_music.music_favorites.count %></i><% end %>
<% end %>