<div class="container">
  <h2 class="mt-3"><i class="fas fa-plus">　楽曲投稿</i></h2>
  <div class="row">
    <div class="col-7 offset-2 mt-4">
      <%= form_with( model: [@album, @album_music], url: artist_album_album_musics_path, method: :post, local: true ) do |f| %>
      <div>
        <div class="mb-2 mt-3"><strong>楽曲名</strong></div>
        <%= f.text_field :name,rows:"5",class: "form-control"  %>
        <small class="form-text text-muted">楽曲名を入力してください。</small>
      </div>
      <div>
        <div class="mb-2 mt-3"><strong>楽曲説明</strong></div>
        <%= f.text_area :caption ,class: "form-control" %>
        <small class="form-text text-muted">説明を入力してください。</small>
      </div>
      <div>
        <div class="mb-2 mt-3"><strong>楽曲URL</strong></div>
        <%= f.text_field :music_url,class: "form-control" %>
        <small class="form-text text-muted">楽曲URLを入力してください。</small>
      </div>
      <div>
        <button class="btn btn-info mt-3"><i class="fas fa-plus">&nbsp;投稿</i>
          <% f.submit %>
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>

