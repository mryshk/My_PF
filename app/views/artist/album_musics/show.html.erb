<div class="container">
  <h1 class="mt-3" id="area-1"><i class="fas fa-user">楽曲詳細</i></h1>
  <div class="row" >
    <div class="col-md-4 mx-md-auto col-8 offset-2">
      <div class="mt-3">
        <img>
        <%= attachment_image_tag @album, :album_image, :fill, 300, 300, fallback: "no_image.jpg",size: "300x300",class: "my-3 rounded-circle" %>
        </img>
        <div>
          <h4><strong><%= @album.name %></strong></h4>
        </div>
      </div>
    </div>
  </div>
  <table class="table-borderless">
    <thead>
      <tr>
        <th>曲名</th>
        <th>説明</th>
        <th>URL</th>
        <th>評価</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @album_music.name %></td>
        <td><%= @album_music.caption %></td>
        <td><a href="<%= @album_music.music_url%>" target="_blank"><%= @album_music.music_url%></a></td>
      </tr>
    </tbody>
  </table>
  <%# ファボ・コメント　 %>
  <div class="mt-3 text-center">
    <div class="d-inline " style="margin-right:20px;" id="music_music_favorite_<%= @album_music.id  %>">
      <%= render 'artist/music_favorites/favorite', album: @album, album_music: @album_music, favorite: @favorite %>
    </div>
    <div class="d-inline ml-2">
      <i class="fas fa-comments text-info fa-lg"><%= @music_comments.count %></i>
    </div>
  </div>
    <div class="text-right mt-3">
      <% if @album_music.album.creater.listener == current_listener  %>
      <button class="btn">
        <%= link_to edit_artist_album_album_music_path(@album_music.album, @album_music),class: "text-info" do%><i class="fas fa-user-edit">編集</i><% end %>
      </button>
      <button class="btn">
        <%= link_to artist_album_path(@album_music.album, @album_music),method: :delete, class: "text-danger" do%><i class="fas fa-user-edit">削除</i><% end %>
      </button>
      <% end %>
    </div>
    <div class="row mt-4" id="comment">
      <%= render "artist/music_comments/comments", album: @album, album_music: @album_music, music_comment: @music_comment, music_comments: @music_comments %>
    </div>

    <h3 id="linkpreview"></h3>
    <a id="link" href="<%= @album_music.music_url%>" target="_blank"><%= @album_music.music_url%><img id="link_img" src=""/></a>
    <script>
    const data = {
      key:'3ce2027b63ce4b30403332b3eb475fbe',
      q: "<%= @album_music.music_url%>"
    }
    //プレビュー表示用の関数
    const createIMG = json => {
      document.querySelector('#link_img').src = json.image;
      document.querySelector('#linkpreview').textContent = json.title;
      document.querySelector('#link').href = json.url;
    }
    //LinkPreviewを利用した通信処理
    fetch('https://api.linkpreview.net', {
      method: 'POST',
      mode: 'cors',
      body: JSON.stringify(data),
    })
    .then(data => data.json())
    .then(json => createIMG(json));
  </script>
</div>









