
<div class="row mt-5" >
  <% albums.each do |album| %>
  <div class="col-lg-5  offset-lg-1  col-8 offset-2" style="margin-top: 150px; " >
    <div class="card mt-4 shadow-lg h-100" >
      <div>
        <%= link_to artist_album_path(album) do %>
          <%= attachment_image_tag album,:album_image,:fill,300,300,size: "300x300", class: "card-img-top"%>
        <% end %>
      </div>
      <div class="card-body">
        <!--アルバム名-->
         <h3 class="card-text text-center"><%= album.name  %></h4>
        <%# 名前と画像 %>
        <div class="card-text" >
          <%= link_to artist_creater_path(album.creater),class: "text-dark" do %>
          <div class="d-inline-block">
            <%= attachment_image_tag album.creater.listener,:profile_image ,size:"50x50", fallback: "no_image.jpg",class: "mt-3 rounded-circle" %>
          </div>
          <div class="d-inline-block">
            <% if album.creater.listener.listener_type == 1  %>
              <i class="fa fa-circle" style="color: gold;"></i>
            <% end %>
            <%= album.creater.listener.name %>
          </div>
          <% end %>
        </div>
        <!--詳細ページへ-->
        <p class="card-text text-center"><%= link_to "show" ,artist_album_path(album), 'data-turbolinks': false %></p>
        <%# 投稿日 %>
        <div class="text-right mt-3"><%= time_ago_in_words(album.created_at) %></div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="row mt-5">
    <div class="">
      <%= paginate albums %>
    </div>
</div>