<!--コメント編集画面-->
<h4 class = "text-center" style="margin-top: 100px;"><i class="far fa-comments"></i> Edit Comment</h4>
<div class="row mt-5">
  <!--編集フォーム-->
  <div class="col-6 offset-3 col-md-6 offset-md-3">
    <%= form_with(model:[ @album, @album_music, @music_comment],url: artist_album_album_music_music_comment_path(@album,@album_music) ,method: :patch,local: true) do |f| %>
    <!--コメント入力欄-->
    <div>
      <%= f.text_area :comment, rows:'2',placeholder: "Comment" ,class: "form-control" %>
    </div>
    <!--星ランク-->
    <div id="post_star" class="mb-2 mt-3">
      <%= f.label :rate,'評価' %>
      <%= f.hidden_field :rate,id: :review_star %>
    </div>
    <!--星ランク用のJavascript-->
    <script>
    $('#post_star').raty({
     starOn: "<%= asset_path('star-on.png') %>",
     starOff: "<%= asset_path('star-off.png') %>",
     starHalf: "<%= asset_path('star-half.png') %>",
     scoreName: 'music_comment[rate]', //登録するモデル名とカラム名を記述
     half: true,
    });
    </script>
    <!--更新ボタン-->
    <button class="btn btn-info mt-4" style="width:100px">Update
      <% f.submit %>
    </button>
    <% end %>
  </div>
</div>