
<!--コメント一覧の部分テンプレート-->
<div class="col-8 offset-2" style="margin-top:100px;">
  <h3 class="main-font"><i class="fas fa-comments "></i>Comment detail</h3>
  <div class="table-responsive">
  <table class="table table-hover mt-3" >
    <tbody>
      <tr>
        <%# ユーザー %>
        <td class=" align-middle text-center" style="width:20%;">
          <%= link_to  listener_path(@music_comment.listener), class: "link-none" do %>
          <div><%= attachment_image_tag @music_comment.listener,:profile_image ,size:"50x50", fallback: "sky-2076868_1280.jpg",class:"mt-3 rounded-circle" %></div>
          <div>&ensp;<%= @music_comment.listener.name %></div>
          <% end %>
        </td>
        <%# コメント %>
        <td class="align-middle " style="width:60%;" ><%= @music_comment.comment %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="row mt-4" id="comment">
  <%= render "artist/music_comments/reply_comments",comments: @comments, album: @album, album_music: @album_music, music_comment_n: @music_comment_n, music_comment: @music_comment %>
</div>

<div class="row " style="margin-top:100px;">
  <div class="col-8 offset-2">
    <!--投稿一覧へ-->
    <%= link_to artist_album_album_music_path(@album,@album_music), 'data-turbolinks': false do%>
      <button class="btn btn-outline-main"><i class="fas fa-arrow-circle-left"></i> Music detail</button>
    <% end %>
  </div>
</div>

