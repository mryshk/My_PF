<% if post.favorited_by?(current_listener) %>
  <%= link_to post_post_favorite_path(post, favorite), method: :delete, class: "text-warning ",remote: true do %><i class="fas fa-star fa-lg sub2_color hover"><%= post.post_favorites.count %><p class="text-dark" style="font-size:12px;">Likes</p></i><% end %>
  <%= link_to post_post_favorites_path(post) do %><% end %>
<% else %>
    <%= link_to post_post_favorites_path(post), method: :post,class: "link", remote: true do %><i class="far fa-star fa-lg hover" style="rgb(063,163,203)"><%= post.post_favorites.count %></br><p class="text-dark" style="font-size:12px;">Likes</p></i><% end %>

<% end %>