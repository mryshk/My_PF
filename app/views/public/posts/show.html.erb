<div class="container" style="margin-bottom:500px; ">
  <h1 class="mt-3 ml-4" id="area-1"><i class="fas fa-music">&nbsp;投稿詳細</i></h1>
  <div class="row mt-4">
    <div class="col-8 my-4 offset-2">
      <div class="card mt-4 shadow-lg h-70">
        <%= attachment_image_tag @post, :picture ,size: "100x300", fallback: "no_image.jpg",class: "card-img-top" %>
        <div class="card-body p-5">
          <%# 曲名・アーティスト名 %>
          <h4 class="card-title text-center"> <%= @post.post_tweet  %></h4>
          <%#  説明　%>
          <p class="card-text text-center" style="margin-top:50px;"><%= @post.post_url  %></p>
          <!--タグ詳細-->
          <p class="card-text text-center">
            <% @post_tags.each do |tag| %>
              <%= link_to tag.tag_name, search_tag_posts_path(tag_id: tag.id) %>
            <% end %>
          </p>
          <%# ファボ・コメント　 %>
          <div class="mt-3 text-center">
            <div class="d-inline " style="margin-right:20px;" id="post_post_favorite_<%= @post.id  %>">
              <%= render 'public/post_favorites/favorite', post: @post %>
            </div>
            <div class="d-inline ml-2">
              <i class="fas fa-comments text-info fa-lg"><%= @comments.count %></i>
            </div>
          </div>
          <%# 投稿ユーザー %>
          <div class="card-text mb-3 text-right" >
            <%= link_to listener_path(@post.listener),class: "text-dark" do %>
            <div>
              <%= attachment_image_tag @post.listener,:profile_image ,size:"50x50", fallback: "no_image.jpg",class:"mt-3 rounded-circle" %>
            </div>
            <div class=" mt-1"><%= @post.listener.name%></div>
            <% end %>
          </div>
          <%# 編集・削除 %>
          <div class="mt-4 text-right">
            <% if @post.listener == current_listener %>
            <button type="button" class="btn "> <%= link_to edit_post_path(@post),class: "text-info" do%><i class="fas fa-edit">編集</i><% end %></button>
            <button type="button" class="btn "><%= link_to post_path(@post),method: :delete, "data-confirm" => "Do you really delete?",class: "text-danger" do%><i class="fas fa-trash-alt">削除</i><% end %></button>
            <% end %>
          </div>
          <%# 投稿日時 %>
          <div class="text-right mt-3"><%= time_ago_in_words(@post.created_at) %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4" id="comment">
    <%= render "public/post_comments/comments",comments: @comments, post: @post, post_comment_n: @post_comment_n %>
  </div>
  <div class="row" style="margin-top:200px;">
    <div class="col-2">
       <button class="btn btn-primary">
         <%= link_to :back ,class: "text-light" do%><i class="fas fa-backward">&nbsp;Back</i><% end %>
       </button>
    </div>
  </div>
</div>



