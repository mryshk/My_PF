<div class="container">
  <h2 class="mt-3"><i class="fas fa-plus">New&nbsp;Music</i></h2>
  <div class="row">
    <div class="col-7 offset-2 mt-4">
      <%= form_with model: @post, local: true do |f| %>
      <div>
        <div class="mb-2 mt-3"><strong>Musician's Name</strong></div>
        <%= f.text_field :post_tweet, class: "form-control" %>
        <small class="form-text text-muted">Please input your artist name</small>
      </div>
      <div>
        <div class="mb-2 mt-3"><strong>Music's Name</strong></div>
        <%= f.text_field :post_url,class: "form-control" %>
        <small class="form-text text-muted">Please input your music name</small>
      </div>
      <div>
        <div class="mb-2 mt-3" ><strong>Musicianâ€™s image</strong></div>
        <%= f.attachment_field :post_image,class: "form-control-file"  %>
        <small class="form-text text-muted">Please input your music image</small>
        <button class="btn btn-info mt-3"><i class="fas fa-plus">&nbsp;Post</i>
          <% f.submit %>
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>

