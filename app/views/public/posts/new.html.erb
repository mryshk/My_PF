<div class="container">
  <h2 class="mt-3"><i class="fas fa-plus">　投稿フォーム</i></h2>
  <div class="row">
    <div class="col-7 offset-2 mt-4">
      <%= form_with model: @post, local: true do |f| %>
      <div>
        <div class="mb-2 mt-3"><strong>投稿</strong></div>
        <%= f.text_area :post_tweet,rows:"5",class: "form-control"  %>
        <small class="form-text text-muted">感じたことなんでも投稿してください。</small>
      </div>
      <div>
        <div class="mb-2 mt-3"><strong>楽曲URL</strong></div>
        <%= f.text_field :post_url,class: "form-control" %>
        <small class="form-text text-muted">URLを入力してください。</small>
      </div>
      <div>
        <div class="mb-2 mt-3"><strong>タグ</strong></div>
        <%= f.text_field :tag_name,class: "form-control" %>
        <small class="form-text text-muted">タグを入力してください。</small>
      </div>
      <div>
        <div class="mb-2 mt-3" ><strong>画像</strong></div>
        <%= f.attachment_field :picture ,class: "form-control-file"  %>
        <small class="form-text text-muted">画像入力</small>
        <button class="btn btn-info mt-3"><i class="fas fa-plus">&nbsp;投稿</i>
          <% f.submit %>
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>

