<h3 class="text-center" style="margin-top:100px;" ><i class="fab fa-searchengin">Search Result</i></h3>
<div class="row mt-4 ">
  <% if @model == 'listener' %>
    <%= render "public/listeners/index", creaters: @records %>
  <% elsif @model == 'post' %>
    <div class="col-3 ml-5 ">
      <%= render "layouts/menu", mygroups: @mygroups %>
    </div>
    <div class="col-5 ml-5 mt-5">
      <%= render "public/posts/index", posts: @records %>
    </div>
  <% elsif @model == 'album' %>
    <%= render "artist/albums/index", albums: @records %>
  <% end %>
</div>