<h3 class="text-center" style="margin-top:100px;" ><i class="fab fa-searchengin">Search Result</i></h3>
<!--検索結果表示-->
<div class="row "style="margin-top:100px;">
  <!--リスナー検索であれば-->
  <% if @model == 'listener' %>
    <%= render "public/listeners/index", listeners: @records %>
  <!--投稿検索であれば-->
  <% elsif @model == 'post' %>
    <!--左メニュー-->
    <div class="col-md-3 ml-5 column-left">
      <%= render "layouts/menu", mygroups: @mygroups %>
    </div>
    <!--投稿一覧部分テンプレート取得-->
    <div class="col-md-5 ml-md-5 mt-md-5 column-center">
      <div class="scroll-list jscroll">
        <%= render "public/posts/index_without_repost_listener", posts: @records %>
      </div>
    </div>
  <!--アルバム検索であれば-->
  <% elsif @model == 'album' %>
    <!--左メニュー-->
    <div class="col-md-3 ml-5 column-left">
      <%= render "layouts/menu", mygroups: @mygroups %>
    </div>
    <!--投稿一覧部分テンプレート取得-->
    <div class="col-md-5 ml-md-5 mt-md-5 column-center">
      <div class="scroll-list jscroll">
        <%= render "artist/albums/index", albums: @records %>
       </div>
    </div>
  <% end %>
</div>
<!--バックボタン-->
<div class="row mt-5 " id="comment">
  <div class="col-6 offset-3">
    <!--前のページへ-->
    <%= link_to :back, 'data-turbolinks': false  do%>
      <button class="btn btn-outline-main"><i class="fas fa-arrow-circle-left"></i> Back</button>
    <% end %>
  </div>
</div>