<div  class="container" style="margin-top:200px;">
  <h1 class="my-4 text-center"><i class="fas fa-users">グループ</i></h1>
    <div class="card shadow-lg col-8 offset-2" style="margin-top:200px;">
      <% @groups.each do |group| %>
      <div class="row ">
        <div class="col-4 mr-">
          <%= attachment_image_tag group,:image,:fill,200,200, fallback: "no_image.jpg",class:"mt-3 rounded-circle" %>
        </div>
        <div class="col-8">
          <div class="mt-5">
            <%= link_to group_path(group) do %>
            <h3 class="card-title"><strong><%= group.name %></strong></h4>
            <% end %>
          </div>
          <div>
            <p class="card-text　text-wrap"><%= group.introduction %></p>
          </div>
        </div>
      <% end %>
      </div>
    </div>
      <%= link_to new_group_path do %>
        <button class="btn btn-block  text-info" style="margin-top:200px;" ><h3><i class="fas fa-users-cog">NEW</i></h3></button>
      <% end %>
</div>