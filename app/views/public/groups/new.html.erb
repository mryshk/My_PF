<div class="container mt-4">
  <h1><i class="fas fa-edit">&nbsp;グループ作成</i></h1>
  <div class="row">
    <div class="col-8 offset-2">
      <%= form_with model: @group, local: true do |f| %>
      <div class="mt-3">
        <label>グループ名</label>
        <%= f.text_field :name ,class: "form-control"%>
      </div>
      <div class="mt-3">
        <label for="group_introduction">グループ説明</label>
        <%= f.text_area :introduction ,class: "form-control" %>
      </div>
      <div class="mt-3">
        <label for="group_image">グループ画像</label>
        <%= f.attachment_field :image ,class: "form-control-file"%>
      </div>
      <div class="mt-3">
        <button class="btn btn-info mt-3">
          <i class="fas fa-edit">&nbsp;作成</i>
          <% f.submit %>
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>




