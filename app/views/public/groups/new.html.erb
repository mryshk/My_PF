<!--新グループ作成が面-->
<h4 class = "text-center" style="margin-top: 100px;"><i class="fas fa-users"></i> New Group</h4>
<p class = "text-center mt-3 " style="font-size:12px;">下記のフォームへ入力してください。</p>
  <!--グループ作成フォーム-->
  <div class="row form-row"style="margin-top: 100px; ">
    <div class="col-6 offset-3"style="margin-top: 100px; margin-bottom:100px;">
      <%= form_with(model: @group, local: true,id: "form") do |f| %>
      <!--グループ名-->
      <div class="form-group　mt-3">
        <%= f.label :グループ名,class:"col-4 mr-2 mt-3  form-label",style: "font-size:14px;" %>
        <%= f.text_field :name,class: "form-control-static col-6", style: "font-size:14px;" ,placeholder:"Group Name" %>
      </div>
      <!--グループ説明-->
      <div class="form-group mt-3">
        <%= f.label :グループ説明 ,class:"col-4 mr-2 mt-3 form-label" ,style: "font-size:14px;"%>
        <%= f.text_area :introduction,rows:"2", autofocus: true, class: "form-control-static col-6", style: "font-size:14px;",placeholder:"Caption" %>
      </div>
      <!--グループ画像-->
      <div class="form-group mt-3">
        <%= f.label :グループ画像,class:"col-4 mr-2 mt-3 form-label",style: "font-size:14px;" %>
        <%= f.attachment_field :image ,class: "form-control-file col-6 d-inline-block" ,style: "padding:0px;"  %>
        <!--投稿ボタン-->
        <button class="btn btn-main mt-5 d-block mx-auto "><i class="fas fa-users"></i> Post
          <% f.submit %>
        </button>
      </div>
      <% end %>
    </div>
  </div>
