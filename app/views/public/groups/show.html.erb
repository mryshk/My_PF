<div class="container">
  <h1 class="mt-3 ml-4" id="area-1"><i class="fas fa-music">&nbsp;グループ詳細</i></h1>
  <div class="row mt-4">
    <div class="col-8 my-4 offset-2" id="area-1">
      <div class="card mt-4 shadow-lg h-70">
        <%= attachment_image_tag @group, :image ,size:"200x200", fallback: "no_image.jpg",class:"mt-3 rounded-circle mx-auto"  %>
        <div class="card-body p-5">
          <h3 class="card-title text-center"><strong><%= @group.name %></strong></h3>
          <p class="card-text text-center"><%= @group.introduction  %></p>
          <div class="text-center btn mt-4"><%= link_to group_group_listeners_path(@group) do %><i class="fas fa-users fa-lg"><%= @group.listeners.count %></i><% end %></div>
           <div class="mt-3">
            <% if @group.joined_by?(current_listener)  %>
              <div type="button" class="btn "><%= link_to group_group_listener_path(@group.id),method: :delete,class: "text-danger" do%><i class="fas fa-walking fa-lg"> Leave</i><% end %></div>
            <% else %>
              <div type="button" class="btn"> <%= link_to group_group_listeners_path(@group.id),method: :post ,class: "text-info" do%><i class="fas fa-house-user fa-lg"> Join</i><% end %></div>
            <% end %>
          </div>
          <div class="text-right mt-3">
            <% if @group.owner_id == current_listener.id %>
             <div type="button" class="btn "> <%= link_to edit_group_path(@group),class: "text-info" do%><i class="fas fa-edit">Edit</i><% end %></div>
             <div type="button" class="btn "><%= link_to group_path(@group),method: :delete, "data-confirm" => "Do you really delete?",class: "text-danger" do%><i class="fas fa-trash-alt">Delete</i><% end %></div>
            <% end %>
          </div>
          <div class="mt-4">
             <% if @group.joined_by?(current_listener)  %>
              <%= link_to group_group_chats_path(@group) do  %>
                <div class="btn btn-outline-info btn-block"><i class="far fa-envelope fa-lg">Group Chat</i></div>
              <% end %>
           <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>



