

<% @groups.each do |group| %>
<div class="card shadow-sm py-4 col-8 offset-2" style="margin-top:30px;">
  <div class="row ">
    <div class="col-4 ">
      <%= attachment_image_tag group,:image, size:"100x100", fallback: "no_image.jpg",class:" rounded-circle" %>
    </div>
    <div class="col-8">
      <div class="mt-3">
        <%= link_to group_path(group),class:"link" do %>
        <h6 class="card-title"><%= group.name %></h6>
        <% end %>
      </div>
      <div>
        <p class="card-text mb-2" style="font-size:13px;"><%= group.introduction.truncate(20)  %></p>
      </div>
      <div>
        <p class="card-text" style="font-size:13px; color:rgb(063,163,203);">
          <i class="fas fa-users fa-lg"></i> <%= group.group_listeners.count %> people
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="row mt-5">
  <div class="col-6 offset-3 text-center mt-5">
      <%= link_to new_group_path ,class:"link" do %>
        <div class="btn btn-outline-main"><i class="fas fa-users"></i> New Group</div>
      <% end %>
  </div>
</div>
