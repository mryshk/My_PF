<div class="container" style="margin-bottom:200px;">
  <h2 class=" text-center" id="area-1" style="margin-top:100px;" ><i class="far fa-user"></i> My page</h2>
  <div class="row" style="margin-bottom:200px; margin-top:100px;">
    <div class="col-md-4 mx-md-auto col-8 offset-2">
      <div class="mt-3 text-center">
        <img>
        <%= attachment_image_tag @listener, :profile_image, size:"300x300",fallback: "no_image.jpg",class: "my-3 rounded-circle" %>
        </img>
        <div class="mt-3">
          <% if @listener.listener_type == 1  %>
            <i class="far fa-user-circle fa-lg" style="color:rgb(255,243,063);"></i>
          <% end %>
          <p class="d-inline-block" style="font-size:22px;"><%= @listener.name %></p>
        </div>
      </div>
      <div class="mt-3 text-center">
        <strong><%= @listener.caption %></strong>
      </div>
      <div class="my-4 text-center">
        <%= link_to listener_followings_path(@listener),class: "text-dark" do %>
          <i class="fas fa-user-check fa-lg mr-3 hover">
            Follow:&ensp;<%= @listener.followings.count %>
          </i>
        <% end %>
        <%= link_to listener_followers_path(@listener),class: "text-dark" do %>
          <i class="fas fa-user-friends fa-lg hover">
            Follower:&ensp;<%= @listener.followers.count %>
          </i>
         <% end %>
      </div>
      <!--クリエイター詳細へ-->
      <div>
        <% if @listener.listener_type == 1  %>
          <%= link_to  artist_creater_path(@listener.creater),class:"link" do%></i>
            <div class="btn btn-outline-main btn-block"><i class="far fa-user-circle"></i> Creater</div>
          <% end %>
        <% end %>
      </div>
      <!--フォロー・アンフォロー-->
      <div class="mt-3 text-center">
      <% unless current_listener.id == @listener.id  %>
        <button class="btn btn-outline-main btn-block">
          <% if current_listener.following?(@listener) %>
            <%= link_to listener_relationships_path(@listener), method: :delete ,class: "link" do %><i class="fas fa-user-slash">&nbsp;Unfollow</i><% end %>
          <% else %>
            <%= link_to listener_relationships_path(@listener), method: :post,class: "link" do %><i class="fas fa-user-check">&nbsp;Follow</i><% end %>
          <% end %>
        </button>
      <% end %>
      </div>
      <!--チャットへ-->
      <div class="mt-4">
        <% if (current_listener.followings.exists? @listener.id)  && (@listener.followings.exists? current_listener.id )%>
          <%= link_to chat_path(@listener) ,class:"link" do  %>
            <div class="btn btn-outline-main btn-block"><i class="far fa-envelope fa-lg"></i> Chat</div>
          <% end %>
        <% end %>
      </div>
      <!--編集画面へ-->
      <div class="text-right mt-3">
        <% if @listener == current_listener  %>
        <button class="btn">
          <%= link_to edit_listener_path(current_listener),class: "text-info" do%><i class="fas fa-user-edit"> Edit</i><% end %>
        </button>
        <% end %>
      </div>
    </div>
  </div>
  <h2 class="text-center my-5" ><i class="fas fa-headphones-alt"></i> My Posts</h2>
  <div class="row mt-5">
    <% if @posts.exists? %>
    <div class="col-6 offset-3">
      <div class="scroll-list jscroll">
        <%= render "public/posts/index", posts: @posts %>
      </div>
    </div>
    <% else %>
    <div class="col-6 offset-3 text-center">
      <p style="font-size:22px;">投稿はありません。</p>
      <% if @listener == current_listener  %>
        <%= link_to new_post_path ,class:"link" do %>
          <div class="btn btn-outline-main btn-block"><i class="far fa-envelope fa-lg"> New Post</i></div>
        <% end %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>








