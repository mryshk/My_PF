<div class="container">
  <h1 class="mt-3" id="area-1"><i class="fas fa-user">マイページ</i></h1>
  <div class="row" style="margin-bottom:300px;">
    <div class="col-md-4 mx-md-auto col-8 offset-2">
      <div class="mt-3">
        <img>
        <%= attachment_image_tag @listener, :profile_image, :fill, 300, 300, fallback: "no_image.jpg",size: "300x300",class: "my-3 rounded-circle" %>
        </img>
        <div><i><strong><%= @listener.name %></strong></i></div>
      </div>
      <div class="mt-3">
        <strong><%= @listener.caption %></strong>
      </div>

      <div class="my-4">
        <%= link_to listener_followings_path(@listener),class: "text-dark" do %><i class="fas fa-user-check fa-lg mr-3">Follow:&ensp;<%= @listener.followings.count %><% end %></i>
        <%= link_to listener_followers_path(@listener),class: "text-dark" do %><i class="fas fa-user-friends fa-lg ">Follower:&ensp;<%= @listener.followers.count %><% end %></i>
      </div>
      <div class="mt-3">
      <% unless current_listener.id == @listener.id  %>
        <button class="btn btn-outline-info btn-block">
          <% if current_listener.following?(@listener) %>
            <%= link_to listener_relationships_path(@listener), method: :delete ,class: "text-info" do %><i class="fas fa-user-slash">&nbsp;Unfollow</i><% end %>
          <% else %>
            <%= link_to listener_relationships_path(@listener), method: :post,class: "text-info"   do %><i class="fas fa-user-check">&nbsp;Follow</i><% end %>
          <% end %>
        </button>
      <% end %>
      </div>
      <div class="mt-4">
        <% if (current_listener.followings.exists? @listener.id)  && (@listener.followings.exists? current_listener.id )%>
          <%= link_to chat_path(@listener) do  %>
            <div class="btn btn-outline-info btn-block"><i class="far fa-envelope fa-lg"> Chat</i></div>
          <% end %>
        <% end %>
      </div>
      <div class="text-right mt-3">
        <% if @listener == current_listener  %>
        <button class="btn">
          <%= link_to edit_listener_path(current_listener),class: "text-info" do%><i class="fas fa-user-edit">編集</i><% end %>
        </button>
        <% end %>
      </div>
    </div>
  </div>
  <h1 class="text-center my-5" ><i class="fas fa-headphones-alt">投稿一覧</i></h1>
   <%=  render "public/posts/index", posts: @posts %>
</div>
  <div class="row mt-5">
     <div class="">
       <%= paginate @posts  %>
     </div>
  </div>
</div>







