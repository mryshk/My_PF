<!--フォロワー一覧-->
<div class="container mt-4">
  <h2 class="text-center" id="area-1" style="margin-top:100px;" >Follower</h2>
  <div class="row"style="margin-top:80px;">
    <!--フォロワーが存在すれば-->
    <% if @listeners.exists?  %>
    <div class="col-8 offset-2">
    <table class="table">
      <thead>
        <tr>
          <th>name</th>
          <th>Follow</th>
          <th>Follower</th>
          <th>chat</th>
        </tr>
      </thead>
      <tbody>
        <% @listeners.each do |listener|  %>
        <tr>
          <!--フォロワーの名前と画像-->
          <td>
            <%= link_to listener_path(listener.id)do %>
            <div>
              <%= attachment_image_tag listener, :profile_image,size:"50x50", fallback: "no_image.jpg",class: "rounded-circle"%>
            </div>
            <div>
              <i class="text-dark ml-2"><%= listener.name %></i>
            </div>
            <% end %>
          </td>
          <!--フォロー一覧へ-->
          <td>
            <%= link_to listener_followings_path(listener),class:"text-dark"  do %>
              <i class="fas fa-listener-check fa-lg mt-3"><%= listener.followings.count %></i>
            <% end %>
          </td>
          <!--フォロワー一覧へ-->
          <td>
            <%= link_to listener_followers_path(listener),class:"text-dark"  do %>
              <i class="fas fa-listener-friends fa-lg mt-3"><%= listener.followers.count %></i>
            <% end %>
          </td>
          <!--相互フォローであればチャットへ-->
          <td>
            <% if (current_listener.followers.include? listener)  && (listener.followers.include? current_listener )%>
              <%= link_to chat_path(listener.id) do  %>
                <div class="btn btn-main">Chat</div>
              <% end %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
<!--フォロワーがいなければ-->
<% else %>
<div class="text-center">
  <h1><i class="fas fa-listeners-slash">&nbsp;No favorite</h1></i>
</div>
<% end %>
<!--バックボタン-->
<div class="row mt-5 " id="comment">
    <div class="col-8 offset-2">
    <!--前のページへ-->
    <%= link_to :back do%>
      <button class="btn btn-outline-main"><i class="fas fa-arrow-circle-left"></i> Back</button>
    <% end %>
  </div>
</div>