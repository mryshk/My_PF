<!--通知一覧-->
<h4 class=" mt-5 text-center"><i class="far fa-bell"></i> Notifications</h4>
<div class="row mt-5">
  <!--通知が存在するのであれば-->
  <% if @notifications.exists? %>
  <div class=" col-8 offset-2 text-center">
    <% @notifications.each do |notification| %>
    <% active = notification.active  %>
    <% post = notification.post  %>
    <div class="mt-3">
      <!--リスナー詳細へ-->
      <%= link_to listener_path(notification.active),class: "link" do %>
        <%= attachment_image_tag active, :profile_image, size: "50x50" ,format: "jpeg", fallback: "no_image.jpg", class:" profile_image rounded-circle" %>
      <% end %>
      <!--通知の概要 helperにて定義-->
      <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
      <br>
      <!--コメントが存在すれば-->
      <% if !@comment.nil? %>
        <!--コメントを薄色で表示-->
        <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
<!--通知全て削除-->
<div class="row mt-5">
  <div class="col-8 offset-2 text-center">
    <%= link_to destroy_all_notifications_path, method: :delete,class:"link " do %>
      <i class="fas fa-trash-alt fa-lg"></i> All Delete
    <% end %>
  </div>
</div>
  <!--通知がなければ-->
  <% else %>
  <div class="col-8 offset-2 text-center">
    <h5 style="margin-top:80px; font-size:30px;" >No Notification</h5>
  </div>
  <% end %>

