<!--通知一覧-->
<h4 class=" mt-5 text-center"><i class="far fa-bell"></i> Notifications</h4>
<div class="row mt-5">
  <!--通知が存在するのであれば-->
  <% if @notifications.exists? %>
  <div class=" col-6 offset-3 text-center">
    <% @notifications.each do |notification| %>
    <% active = notification.active  %>
    <% post = notification.post  %>
    <div class="">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="align-middle text-right p-0 " style="width:20%;">
            <!--リスナー詳細へ-->
            <%= link_to listener_path(notification.active),class: "link p-0" do %>
              <%= attachment_image_tag active, :profile_image, size: "50x50" ,format: "jpeg", fallback: "sky-2076868_1280.jpg", class:" profile_image rounded-circle" %>
            <% end %>
            </th>
            <td class="align-middle text-center p-0" style="width:60%;">
              <%= notification_form(notification) %>
              <!--コメントが存在すれば-->
              <% if !@comment.nil? %>
              <!--コメントを薄色で表示-->
                <p class="moderate-font text-center m-0" style="color: #C0C0C0;"><%= @comment %></p>
              <% end %>
            </td>
            <td class="align-middle text-left p-0" style="width:20%;">
              <%= l notification.created_at %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
</div>
<!--通知全て削除-->
<div class="row mt-5">
  <div class="col-8 offset-2 text-center">
    <%= link_to destroy_all_notifications_path, method: :delete,class:"link " do %>
      <i class="fas fa-trash-alt fa-lg"></i> All Delete
    <% end %>
  </div>
</div>
  <!--通知がなければ-->
  <% else %>
  <div class="col-8 offset-2 text-center">
    <h5 style="margin-top:80px; font-size:30px;" >No Notification</h5>
  </div>
  <% end %>

