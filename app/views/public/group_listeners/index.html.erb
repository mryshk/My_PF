<div class="container" style="height:1000px;">
  <h2 class="text-center" id="area-1" style="margin-top:100px;" >Group Menber</h2>
  <div class="row">
    <div class="col-8 mx-auto">
    <% if @group_listeners.exists?  %>
      <table class="table">
        <thead>
          <tr>
            <th>ProfileImage</th>
            <th>Name</th>
            <th>Follow</th>
            <th>Chat</th>
          </tr>
        </thead>
        <tbody>
          <% @group_listeners.each do |group_listener|  %>
          <tr>
            <td class="align-middle"><%= link_to listener_path(group_listener.listener_id) do %><%= attachment_image_tag group_listener.listener, :profile_image, size: "50x50", fallback: "no_image.jpg",class: "mt-3 rounded-circle"  %><% end %></td>
            <td class="align-middle"><%= link_to listener_path(group_listener.listener_id),class: "text-info" do %><%= group_listener.listener.name %><% end %></td>
            <td class="align-middle">
            <% unless current_listener.id == group_listener.listener_id %>
              <% if current_listener.followings.exists?(group_listener.listener_id) %>
                <%= link_to listener_relationships_path(group_listener.listener_id), method: :delete ,class: "text-info" do %><i class="fas fa-listener-slash">&nbsp;Unfollow</i><% end %>
              <% else %>
                <%= link_to listener_relationships_path(group_listener.listener_id), method: :post,class: "text-info"   do %><i class="fas fa-listener-check">&nbsp;Follow</i><% end %>
              <% end %>
            <% end %>
            </td>
            <td class="align-middle">
              <% if (current_listener.followings.exists? group_listener.listener_id)  && (group_listener.listener.followings.exists? current_listener.id )%>
                <%= link_to chat_path(group_listener.listener_id) do  %>
                <div class="btn btn-info"><i class="far fa-envelope">Chat</i></div>
                <% end %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h1 class="text-center mt-5 "><i class="fas fa-listeners-slash">No Member</i></h1>
    <% end %>
    </div>
  </div>
</div>



